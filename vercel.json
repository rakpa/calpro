{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/node",
      "dest": "dist"
    },
    {
      "src": "client/public/**",
      "use": "@vercel/static",
      "dest": "dist/public"
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/dist/public/$1" }
  ]
}
